{% include 'head.njk' %}
<body>
    {% include 'header.njk' %}
    <main>
        <section>
            <h1>{{ title | upper }}</h1>
            {{ content | safe }}
            <section class="post-listing">
                {%- for post in collections[title] -%}
                    <figure>
                        <img src="{{ post.data.thumbnail }}" alt="{{ post.data.alt }}">                                
                        <figcaption>
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </figcaption>
                    </figure>
                {%- endfor -%}
            </section>
        </section>
    </main>
    {% include 'footer.njk' %}
</body>
</html>
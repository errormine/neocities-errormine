{% include 'header.njk' %}
<main>
    <section>
        <h1>{{ title | upper }}</h1>
        {{ content | safe }}
        <hr>
        <section class="portal-sections">
            {%- for section in collections[title] -%}
                <h2><a href="{{ section.url }}">{{ section.data.title | upper }}</a></h2>
                <p>{{ section.data.description }}</p>
            {%- endfor -%}
        </section>
        <hr>
    </section>
</main>
{% include 'footer.njk' %}
</body>
</html>
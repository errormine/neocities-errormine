{% include 'head.njk' %}
<body>
    {% include 'header.njk' %}
    <main>
        <section>
            <h1>{{ title }}</h1>
            {{ content | safe }}
            <section class="post-listing">
                <ol>
                    {%- for post in collections[title] -%}
                        <li>
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </li>
                    {%- endfor -%}
                </ol>
            </section>
        </section>
    </main>
    {% include 'footer.njk' %}
</body>
</html>